{
  "manifest_version": 3,
  "name": "VoxMate",
  "short_name": "VxM",
  "version": "1.1",
  "description": "Translate webpage content using Chrome's on-device Translator API",
  "permissions": ["activeTab", "storage", "tabs", "commands", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Translator"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "48": "public/icons/logo-48.png",
    "64": "public/icons/logo-64.png",
    "72": "public/icons/logo-72.png",
    "96": "public/icons/logo-96.png",
    "256": "public/icons/logo-256.png"
  },
  "commands": {
    "toggle_voice_mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+V"
      },
      "description": "Toggle voice mode on/off"
    }
  }
}
